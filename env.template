# Firebase Configuration Template
# Copy this file to .env.local and fill in your Firebase project details
# NEVER commit .env.local to version control

# Required Firebase Environment Variables
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Optional Firebase Environment Variables
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# AI Service Configuration (standardized naming)
NEXT_PUBLIC_AI_PROVIDER=local
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_OPENAI_MODEL=gpt-3.5-turbo
NEXT_PUBLIC_OPENAI_BASE_URL=https://api.openai.com/v1
NEXT_PUBLIC_CLAUDE_API_KEY=your-claude-api-key
NEXT_PUBLIC_CLAUDE_MODEL=claude-3-haiku-20240307
NEXT_PUBLIC_CLAUDE_BASE_URL=https://api.anthropic.com/v1
NEXT_PUBLIC_HUGGINGFACE_API_KEY=your-huggingface-api-key
NEXT_PUBLIC_HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2
NEXT_PUBLIC_HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
NEXT_PUBLIC_LOCAL_AI_BASE_URL=http://localhost:11434
NEXT_PUBLIC_LOCAL_AI_MODEL=mistral

# Database Configuration
NEXT_PUBLIC_DATABASE_PROVIDER=firebase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_PLANETSCALE_DATABASE_URL=your-planetscale-url
NEXT_PUBLIC_NEON_DATABASE_URL=your-neon-url

# Payment Configuration (public keys only)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
NEXT_PUBLIC_SQUARE_APPLICATION_ID=your-square-application-id
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# Server-side Payment Keys (NEVER expose in client)
STRIPE_SECRET_KEY=your-stripe-secret-key
SQUARE_ACCESS_TOKEN=your-square-access-token
PAYPAL_SECRET=your-paypal-secret

# Hosting Configuration
NEXT_PUBLIC_HOSTING_PROVIDER=vercel
VERCEL_TOKEN=your-vercel-token

# Monitoring Configuration
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Cost Optimization Settings
NEXT_PUBLIC_MAX_MONTHLY_AI_SPEND=25
NEXT_PUBLIC_MAX_MONTHLY_DB_SPEND=10
NEXT_PUBLIC_MAX_MONTHLY_HOSTING_SPEND=15
NEXT_PUBLIC_ENABLE_LOCAL_AI=true
NEXT_PUBLIC_ENABLE_LOCAL_DATABASE=true
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Development Settings
NODE_ENV=development
USE_FIREBASE_EMULATORS=false
