rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload files to their own user directory
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload files to their own listings
    match /listings/{listingId}/{allPaths=**} {
      allow read: if true; // Anyone can read listing images
      allow write: if request.auth != null && 
        exists(/databases/$(firestore.default)/documents/listings/$(listingId)) &&
        request.auth.uid == get(/databases/$(firestore.default)/documents/listings/$(listingId)).data.ownerId;
    }
    
    // Allow users to upload profile pictures
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload temporary files during form submission
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
